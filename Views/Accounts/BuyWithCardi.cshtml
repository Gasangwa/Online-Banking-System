@model ThesisProject.Models.Card
@{
	ViewData["title"] = "BuyWithCard";
}
<div class="my-3 w-25">
	<form asp-action="BuyWithCardi">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="cardId" />
		<input type="hidden" value="@Model.cardName" asp-for="cardName" id="cardType" />
		<div class="form-group my-2">
			<label asp-for="Account.amount" class="control-label"></label>
			<input asp-for="Account.amount" class="form-control" />
			<span asp-validation-for="Account.amount" class="text-danger"></span>
		</div>
		<div class="form-group my-2" id="displayForCurrency" style="display: none;">
			<select asp-for="Account.currencyType" class="form-select" aria-label="Currency Type">
				<option value="Eur">Eur</option>
				<option value="Dollar">Dollar</option>
				<option value="Zloty">Zloty</option>
			</select>
			<span asp-validation-for="Account.currencyType" class="text-danger article__description"></span>
		</div>
		<div class="form-group my-2">
			<input type="submit" value="@Localizer["Buy"]" class="button btn" />
		</div>
	</form>
</div>
<script>
	function toggleDisplay() {
		var cardType = document.getElementById("cardType").value;
		var displayDiv = document.getElementById("displayForCurrency");
		displayDiv.style.display = (cardType === "Multi-currency") ? "block" : "none";
	}
	window.onload = function () {
		toggleDisplay();
	};
</script>