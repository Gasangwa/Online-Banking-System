@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container w-25 ">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 class="article__title text-center m-3">@Localizer["Welcome to EasyBank"]</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger article__description" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.name" class="form-control" aria-required="true" placeholder="Name" />
            <label asp-for="Input.name">@Localizer["Name"]</label>
            <span asp-validation-for="Input.name" class="text-danger article__description"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.surName" class="form-control" aria-required="true" placeholder="SurName" />
            <label asp-for="Input.surName">@Localizer["SurName"]</label>
            <span asp-validation-for="Input.surName" class="text-danger article__description"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.DOB" class="form-control" aria-required="true" placeholder="MM/DD/YYYY" />
            <label asp-for="Input.DOB">@Localizer["Date of Birth"]</label>
            <span asp-validation-for="Input.DOB" class="text-danger article__description"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">@Localizer["Email"]</label>
            <span asp-validation-for="Input.Email" class="text-danger article__description"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">@Localizer["Password"]</label>
            <span asp-validation-for="Input.Password" class="text-danger article__description"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword">@Localizer["Confirm Password"]</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger article__description"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Register"]</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
