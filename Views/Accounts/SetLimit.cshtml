@model ThesisProject.Models.Account

@{
    ViewData["Title"] = "SetLimit";
}
<h4 class="article__title m-1">@Localizer["Set new limit"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetLimit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label name="accountLimit" class="control-label"></label>
                <input name="accountLimit" class="form-control" />
                <span asp-validation-for="accountLimit" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="@Localizer["Save"]" class="btn button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
