@model ThesisProject.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h4 class="article__title m-1">@Localizer["Add account"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger article__description"></div>
            <div class="form-group my-2">
                <label asp-for="accountName" class="control-label"></label>
                <input asp-for="accountName" class="form-control" />
                <span asp-validation-for="accountName" class="text-danger article__description"></span>
            </div>
            <div class="form-group my-2">
                <select asp-for="currencyType" class="form-select" aria-label="Currency Type">
                    <option value="Dollar">Dollar</option>
                    <option value="Eur">Eur</option>
                    <option value="Zloty">Zloty</option>
                </select>
                <span asp-validation-for="currencyType" class="text-danger my-1 article__description"></span>
            </div>
            <div class="form-group my-2">
                <select asp-for="accountType" class="form-select" aria-label="Account Type">
                    <option value="Saving">@Localizer["Saving"]</option>
                    <option value="Current">@Localizer["Current"]</option>
                </select>
                <span asp-validation-for="accountType" class="text-danger article__description"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="@Localizer["Create"]" class="button btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="link">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
